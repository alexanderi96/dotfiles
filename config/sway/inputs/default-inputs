### Input configuration
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

# Surface type cover trackpad
input "1118:2496:Microsoft_Surface_Type_Cover_Touchpad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# Surface type cover keyboard
input "1118:2496:Microsoft_Surface_Type_Cover_Keyboard" {
	xkb_layout it
}

# Surface touchscreen configuration
input "1118:31:IPTS_Touch" map_to_output $surface_display

# Keychron K2 Mechanical keyboard
input "1452:597:Keychron_K2" {
	xkb_layout us
}
